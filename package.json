{
  "name": "capta-aws",
  "type": "module",
  "scripts": {
    "dev": "tsx watch ./src/server.ts",
    "build": "esbuild ./src/lambda.ts --bundle --platform=node --target=node20 --format=esm --outfile=./dist/index.mjs",
    "zip": "zip -j lambda.zip dist/index.mjs",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name cspta-aws",
    "deploy": "run-s build zip update"
  },
  "devDependencies": {
    "@types/node": "^24.5.0",
    "esbuild": "^0.21.4",
    "npm-run-all2": "^6.2.0"
  },
  "dependencies": {
    "@formkit/tempo": "^0.1.2",
    "@hono/node-server": "^1.19.2",
    "hono": "^4.9.7",
    "tsx": "^4.20.5",
    "zod": "^4.1.8"
  }
}
